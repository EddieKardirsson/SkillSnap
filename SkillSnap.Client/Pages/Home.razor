@page "/"

<PageTitle>SkillSnap - Home</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-5">SkillSnap</h1>
            <p class="lead text-center mb-5">Showcase your skills and projects</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h3>Sample Profile</h3>
                </div>
                <div class="card-body">
                    <ProfileCard Name="John Developer" 
                               Bio="Full-stack developer with passion for clean code" 
                               ProfileImageUrl="" />
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h3>Skills (Connected to API)</h3>
                </div>
                <div class="card-body">
                    <SkillTags />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Projects (Connected to API)</h3>
                </div>
                <div class="card-body">
                    <ProjectList />
                </div>
            </div>
        </div>
    </div>
</div>