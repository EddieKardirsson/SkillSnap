@inject AuthService AuthService
@inject UserSessionService UserSession
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Restore authentication state on app startup
        await RestoreAuthenticationState();
    }

    private async Task RestoreAuthenticationState()
    {
        try
        {
            // Check if user has a valid token in localStorage
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            
            if (isAuthenticated)
            {
                // The IsAuthenticatedAsync method already calls RestoreUserSessionAsync
                // which should populate the UserSessionService
                Console.WriteLine("Authentication restored successfully");
            }
            else
            {
                Console.WriteLine("No valid authentication found");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error restoring authentication state: {ex.Message}");
        }
    }
}
