@* Reusable profile card component. Pass Name, Bio, and ProfileImageUrl. *@
<div class="card shadow-sm @Class" style="@Style" @attributes="AdditionalAttributes">
    <img src="@ResolvedImageUrl" class="card-img-top" alt="@AltText" />
    <div class="card-body">
        <h5 class="card-title mb-1">@DisplayName</h5>
        @if (!string.IsNullOrWhiteSpace(Bio))
        {
            <p class="card-text text-muted">@Bio</p>
        }
    </div>
</div>

@code {
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string Bio { get; set; } = string.Empty;
    [Parameter] public string ProfileImageUrl { get; set; } = string.Empty;

    // Optional customization
    [Parameter] public string AltText { get; set; } = "Profile picture";
    [Parameter] public string Class { get; set; } = string.Empty;
    [Parameter] public string Style { get; set; } = "max-width: 420px;";

    // Capture unmatched attributes for the root element (e.g., id, data-* attributes)
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string ResolvedImageUrl =>
        string.IsNullOrWhiteSpace(ProfileImageUrl)
            ? "https://picsum.photos/seed/picsum/400/600"
            : ProfileImageUrl;

    private string DisplayName => string.IsNullOrWhiteSpace(Name) ? "Anonymous" : Name;
}